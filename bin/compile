#!/bin/bash

echo "-----> Reading env variables"
basedir="$( cd -P "$( dirname "$0" )" && pwd )"
source $basedir/read_env.sh
read_env "$3"

echo "-----> Compile the client application"
cd "$1"
cargo build --release

echo "-----> Remove build files to reduce image size"
mv "target/release/$APP_NAME" .
rm -rf "$1/target"
